#!/usr/bin/env node

const readline = require("readline");
const { main } = require("./verify_params");

// taking the parameters that come from the command in the terminal
const all_params = process.argv;

var rl = readline.createInterface(process.stdin, process.stdout);

var infos = [];

rl.question("üíª Project name: ", (project_name) => {
  infos.push(project_name);
  rl.question("üìù Description: ", (description) => {
    infos.push(description);
    rl.question("üë§ Github username: ", (github_username) => {
      infos.push(github_username);
      rl.question("üñºÔ∏è Choose a template for your readme (0 or 1): ", (readme_model) => {
          infos.push(readme_model);
          console.log("\x1b[32m%s\x1b[0m", "\n‚è≠ Send answers for next step \n");
          rl.close();
          main(all_params, infos);
        }
      );
    });
  });
});
